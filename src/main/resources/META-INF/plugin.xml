<idea-plugin>
    <id>indent-rainbow.indent-rainbow</id>
    <name>Indent Rainbow</name>
    <vendor email="diraria+indent-rainbow@yandex.ru" url="https://github.com/dima74/indent-rainbow">Indent Rainbow</vendor>

    <description><![CDATA[
        <h1 align="center">Indent Rainbow Plugin</h1>
        <h2 align="center">A simple extension to make indentation more readable</h2>
        <!--
        <div><img width="509" height="477" src="https://raw.githubusercontent.com/dima74/intellij-indent-rainbow/master/assets/example.png"></div>
        -->
        <p>This extension colorizes the indentation in front of your text alternating four different colors on each step.</p>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <application-components>
        <component>
            <implementation-class>indent.rainbow.MyApplicationComponent</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="indent.rainbow.IndentRainbowConfig" />

        <additionalTextAttributes scheme="Darcula" file="IndentRainbowColorSchemes/original_rgba.xml" />
        <additionalTextAttributes scheme="Default" file="IndentRainbowColorSchemes/original_rgba.xml" />
        <additionalTextAttributes scheme="Empty" file="IndentRainbowColorSchemes/original_rgba.xml" />
    </extensions>

    <actions>
        <action id="IndentRainbow.Toggle"
                class="indent.rainbow.IndentRainbowToggleAction"
                text="Indent Rainbow: Toggle (Enable/Disable)" />
    </actions>
</idea-plugin>
