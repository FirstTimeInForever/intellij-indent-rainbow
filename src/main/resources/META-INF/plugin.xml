<idea-plugin>
    <id>indent-rainbow.indent-rainbow</id>
    <name>Indent Rainbow</name>
    <vendor email="diraria+indent-rainbow@yandex.ru" url="https://github.com/dima74/indent-rainbow">Indent Rainbow</vendor>

    <description><![CDATA[
        <h1 align="center">Indent Rainbow Plugin</h1>
        <h2 align="center">A simple extension to make indentation more readable</h2>
        <!--
        <div><img width="64" height="64" src="todo"></div>
        -->
        <p>This extension colorizes the indentation in front of your text alternating four different colors on each step.</p>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <application-components>
        <component>
            <implementation-class>indent.rainbow.MyApplicationComponent</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/IndentRainbowDarcula.xml"/>
        <additionalTextAttributes scheme="Default" file="colorSchemes/IndentRainbowDefault.xml"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
